generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  DEV
}

model Board {
  id           String   @id @default(uuid())
  title        String
  slug         String   @unique // Para URLs amigáveis ou identificação única
  isMainBoard  Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  userId       String 
  user         User     @relation(fields: [userId], references: [id])
  columns      Column[]

  @@index([userId])
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  passwordHash String
  role         Role     @default(DEV)
  tasks        Task[]
  boards       Board[] 
}

model Column {
  id        String @id @default(uuid())
  title     String
  order     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tasks     Task[]
  boardId   String? // chave estrangeira para Board
  board     Board? @relation(fields: [boardId], references: [id])


  @@unique([boardId, order])
  @@index([boardId])
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String?
  done        Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  columnId    String
  column      Column   @relation(fields: [columnId], references: [id])
  order       Int

  @@index([userId])
  @@index([columnId])
  @@unique([columnId, order])
}